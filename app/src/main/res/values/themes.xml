<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Tema base para Material 3 en XML -->
    <style name="Base.Theme.AsistenciaQR" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colores principales -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Configurar estilos por defecto para componentes -->
        <item name="materialButtonStyle">@style/Widget.AsistenciaQR.Button.Filled</item>
        <item name="textInputStyle">@style/Widget.AsistenciaQR.TextInputLayout.Filled</item>
    </style>

    <style name="Theme.AsistenciaQR" parent="Base.Theme.AsistenciaQR" />

    <!-- Estilos personalizados para componentes -->
    <style name="Widget.AsistenciaQR.Button.Filled" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">48dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:elevation">4dp</item>
        <item name="android:translationZ">8dp</item>
    </style>

    <style name="Widget.AsistenciaQR.TextInputLayout.Filled" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Esquinas redondeadas -->
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>

        <!-- Colores de borde -->
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>

        <!-- Colores de borde para error -->
        <item name="boxStrokeErrorColor">@color/red_600</item>

        <!-- Colores de texto -->
        <item name="hintTextColor">?attr/colorPrimary</item>
        <item name="android:textColorHint">@color/gray_600</item>

        <!-- Animaciones y efectos -->
        <item name="hintAnimationEnabled">true</item>

        <item name="errorEnabled">true</item>
        <item name="errorTextAppearance">@style/TextAppearance.AsistenciaQR.Error</item>
        <item name="errorTextColor">@color/red_600</item>

        <!-- Deshabilitar el icono de error por defecto -->
        <item name="errorIconDrawable">@null</item>
        <item name="errorIconTint">@color/red_600</item>
    </style>

    <!-- Estilo para el hint animado -->
    <style name="TextAppearance.AsistenciaQR.Hint" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Estilo para mensajes de error -->
    <style name="TextAppearance.AsistenciaQR.Error" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/red_600</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingTop">4dp</item>
    </style>

    <style name="ThemeOverlay.AsistenciaQR.AlertDialog" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/Widget.AsistenciaQR.DialogButton.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.AsistenciaQR.DialogButton.Negative</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/gray_600</item>
    </style>

    <!-- Estilos para botones de diÃ¡logo -->
    <style name="Widget.AsistenciaQR.DialogButton.Positive" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="Widget.AsistenciaQR.DialogButton.Negative" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/gray_600</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>
</resources>