<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/purple_500"
        app:titleTextColor="@color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Información del profesor -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tvTeacherName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Nombre del Profesor"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvTeacherEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        android:text="email@institucion.edu"
                        android:textColor="@color/gray_600"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvTeacherId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="4dp"
                        android:text="ID: XXXXXXXX"
                        android:textColor="@color/gray_500"
                        android:textSize="12sp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- QR Code Preview - Estructura optimizada -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="24dp"
                android:padding="20dp">

                <!-- TextView para el título -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Código QR"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal" />

            </com.google.android.material.card.MaterialCardView>

            <!-- ImageView separado para el QR -->
            <ImageView
                android:id="@+id/ivQrCode"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@color/white"
                android:padding="8dp"
                android:layout_marginBottom="24dp" />

            <!-- Botones de acción -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGeneratePdf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Generar Carnet PDF"
                android:textSize="16sp"
                app:icon="@drawable/ic_picture_as_pdf"
                app:iconGravity="start"
                app:iconPadding="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSharePdf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Compartir QR"
                android:textSize="16sp"
                app:icon="@drawable/ic_share"
                app:iconGravity="start"
                app:iconPadding="8dp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>