<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/purple_500"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:titleTextColor="@color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/carnet_preview"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- Contenedor de DOS carnets (frontal y reverso) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="32dp">

            <!-- Carnet FRONTAL (izquierda) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="145dp"
                android:layout_height="238dp"
                android:layout_marginEnd="20dp"
                app:cardCornerRadius="12dp"
                app:strokeColor="@color/purple_500"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!-- Header frontal -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:background="@color/purple_500"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/DOCENTE"
                            android:textColor="@color/white"
                            android:textSize="8sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Foto circular -->
                    <ImageView
                        android:id="@+id/ivUserPhoto"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:contentDescription="@string/desc_preview"
                        android:scaleType="centerCrop"
                        android:background="@drawable/circular_background" />

                    <!-- Información frontal - CON ETIQUETAS -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="vertical"
                        android:paddingHorizontal="8dp"
                        android:gravity="center">

                        <!-- Nombres con etiqueta -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/names_carnet_preview"
                                android:textColor="@color/black"
                                android:textSize="6.5sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvCarnetNames"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/hint_Nombres"
                                android:textColor="@color/black"
                                android:textSize="6.5sp"
                                android:maxLines="2"
                                android:ellipsize="end" />
                        </LinearLayout>

                        <!-- Apellidos con etiqueta -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginTop="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Apellidos_carnet_preview"
                                android:textColor="@color/black"
                                android:textSize="6.5sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvCarnetLastnames"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/hint_Apellidos"
                                android:textColor="@color/black"
                                android:textSize="6.5sp"
                                android:maxLines="2"
                                android:ellipsize="end" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Carnet REVERSO (derecha) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="145dp"
                android:layout_height="238dp"
                app:cardCornerRadius="12dp"
                app:strokeColor="@color/purple_500"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!-- Header reverso -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:background="@color/purple_500"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/INFORMACION"
                            android:textColor="@color/white"
                            android:textSize="7sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- QR Code -->
                    <ImageView
                        android:id="@+id/ivQrCode"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="25dp"
                        android:background="@color/white"
                        android:padding="2dp"
                        android:contentDescription="@string/desc_qr" />

                    <!-- Fecha de emisión -->
                    <TextView
                        android:id="@+id/tvIssueDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="40dp"
                        android:text="@string/Emitido"
                        android:textColor="@color/black"
                        android:textSize="6sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Información adicional del profesor - CORREGIDO -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginHorizontal="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/informacion_profesor"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvTeacherName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/full_name_preview"
                android:textColor="@color/gray_700"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvTeacherEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/email_preview"
                android:textColor="@color/gray_700"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvTeacherId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/id_preview"
                android:textColor="@color/gray_700"
                android:textSize="14sp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Botón principal de acción -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGeneratePdf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:text="@string/btn_carnet"
        android:textSize="16sp"
        app:icon="@drawable/ic_picture_as_pdf"
        app:iconGravity="start"
        app:iconPadding="8dp"
        android:layout_marginBottom="16dp"
        style="@style/Widget.AsistenciaQR.Button.Filled"/>

    </LinearLayout>

    </ScrollView>

    </LinearLayout>